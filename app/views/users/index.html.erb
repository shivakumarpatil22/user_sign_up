<div class="container">
  <h2>Users</h2>
  <%= link_to "New", new_user_path %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Company</th>
        <th>Skills</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.gender %></td>
        <td><%= user.company %></td>

        <td><%= link_to "Show",  user_path(user.id) %></td>
        <td><%= link_to "Edit",  edit_user_path(user.id) %></td>
        <td><%= link_to "Destroy", user, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
      </tr>
      <%end%>
      <%= will_paginate @user%>
    </tbody>
  </table>
</div>